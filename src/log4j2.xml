<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">
  <appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%highlight{[%d{HH:mm:ss}] [%-5level] [%-18t] %msg  -->  %l%n}{FATAL=red, ERROR=red, WARN=yellow, INFO=blue, DEBUG=cyan ,TRACE=green}"/>
    </Console>
  </appenders>
  <loggers>
    <root level="trace">
      <appender-ref ref="Console"/>
    </root>
  </loggers>
</configuration>